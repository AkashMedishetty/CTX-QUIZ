# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quiz_platform?retryWrites=true&w=majority
MONGODB_DB_NAME=quiz_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
# IMPORTANT: In production, JWT_SECRET MUST be set to a strong, random value
# Minimum 32 characters recommended for security
# The server will fail to start in production if this is not properly configured
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
# Token expiration time (default: 6 hours)
# Valid formats: "6h", "1d", "30m", "3600" (seconds)
JWT_EXPIRES_IN=6h

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
JOIN_RATE_LIMIT_MAX=5
ANSWER_RATE_LIMIT_MAX=1

# Session Configuration
SESSION_TTL_SECONDS=21600
PARTICIPANT_SESSION_TTL_SECONDS=300

# Performance Configuration
MAX_CONNECTIONS=1000
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_INTERVAL_MS=5000
